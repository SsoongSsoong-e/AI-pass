{
  "compilerOptions": {
    "composite": true,  // 추가
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",  // "node" → "bundler"로 변경
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Import 설정 */
    "allowSyntheticDefaultImports": true,  // 추가
    "esModuleInterop": true,  // 추가

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["vite.config.ts"]
}